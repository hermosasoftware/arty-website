---
// Services Section Component
import Card from '../Card.tsx';

const services = [
  {
    image: '/assets/cards-images/minimalist-image-sweet-yellow.png',
    alt: 'Residential Design',
    title: 'Residential Design',
    description: 'We design functional, aesthetic, and sustainable spaces, adapted to the environment and the needs of each client.'
  },
  {
    image: '/assets/cards-images/Minimalist-Commercial.png',
    alt: 'Enterprise architecture.',
    title: 'Enterprise architecture.',
    description: 'We develop architectural solutions for offices, commercial premises, coworking spaces, and start-ups, optimizing the functionality of the space and projecting the identity of each brand.'
  },
  {
    image: '/assets/cards-images/Renovation-removebg-preview.png',
    alt: 'Building permits',
    title: 'Building permits',
    description: 'We take care of the entire process of obtaining permits from institutions such as the CFIA, municipalities, and the INS.'
  },
  {
    image: '/assets/cards-images/Personalized-consulting-services.png',
    alt: 'Personalized consulting services',
    title: 'Personalized consulting services',
    description: 'We offer consulting sessions for those seeking guidance on design, space distribution, finishes, choice of materials, or budget optimization.'
  },
  {
    image: '/assets/cards-images/Minimalist-3D.png',
    alt: 'Art and decoration',
    title: 'Art and decoration',
    description: 'We integrate art into spaces through decorative elements, furniture, murals, and pieces selected with aesthetic and emotional intent.'
  },
  {
    image: '/assets/cards-images/Minimalist-Managment-Card.png',
    alt: 'Project management and consulting Projects',
    title: 'Project management and consulting Projects',
    description: 'We accompany the construction process from planning to execution. We supervise costs, schedules, suppliers, and quality of work.'
  }
];
---

<!-- Services Section -->
<section id="services" class="py-24">
  <div class="max-w-6xl mx-auto px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-semibold mb-4 text-gray-800">Our Services</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Comprehensive architectural solutions for every need</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <Card
          image={service.image}
          alt={service.alt}
          title={service.title}
          description={service.description}
          variant="service"
          client:load
        />
      ))}
    </div>
  </div>
</section>


